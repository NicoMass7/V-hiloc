{% extends 'base.html.twig' %}

{% block title %}Détail d'un véhicule{% endblock %}

{% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }

  .example-wrapper code {
    background: #F5F5F5;
    padding: 2px 6px;
  }
</style>

<div class="example-wrapper">
  {% if car is not null %}
  <section id="car">
    <a href="{{ path('app_car_index') }}">&larr; Retour</a>

    <h2>{{ car.name }} ( {{ car.gearBox.value }} )</h2>
    <div class="card mb-1 m-auto">
      <p class="description-car">{{ car.description }}</p>
    </div>

    <div class="advantages">
      <div class="single-advantage"><img src="{{ asset('icons/checked.png') }}" alt="" /> Km illimités</div>
      <div class="single-advantage"><img src="{{ asset('icons/checked.png') }}" alt="" /> Taxe routière incluse
      </div>
      <div class="single-advantage"><img src="{{ asset('icons/checked.png') }}" alt="" /> Assistance dépannage 24/7
      </div>
      <div class="single-advantage"><img src="{{ asset('icons/checked.png') }}" alt="" /> Pas de frais caché</div>
      <div class="single-advantage"><img src="{{ asset('icons/checked.png') }}" alt="" /> Assurance au tiers</div>
      <div class="single-advantage"><img src="{{ asset('icons/checked.png') }}" alt="" /> Réservation sécurisée
      </div>
    </div>

    <hr>

    <p class="legal-information">Les conducteurs doivent avoir leur permis de conduire depuis au moins 5 ans.</p>

    <div class="total-rent">
      <span>Total</span>
      <span>{{ car.monthlyPrice }} €/mois</span>
    </div>
    <button class="btn-add">Louer pour {{ car.monthlyPrice }}/mois</button>
  </section>


  <section id="insurances">
    <h2>Les Assurances et Assistances</h2>

    <div class="insurances-list">
      <div class="single-insurance">
        <img src="{{ asset('icons/basic.png') }}" alt="Basique" />
        <h3>Protection Basique</h3>
        <p><img src="{{ asset('icons/checked.png') }}" alt="" /> Assurance dommages pour les dommages par collision, les
          rayures, les chocs et le vol.</p>
      </div>
      <div class="single-insurance">
        <img src="{{ asset('icons/complete.png') }}" alt="Complète" />
        <h3>Protection Complète</h3>
        <p><img src="{{ asset('icons/checked.png') }}" alt="" /> Assurance dommages pour les dommages par collision, les
          rayures, les chocs et le vol.</p>
        <p><img src="{{ asset('icons/checked.png') }}" alt="" /> Protection pneus et vitres.</p>
      </div>
    </div>
  </section>

  {% else %}
  <div>Véhicule non trouvé</div>
  <a href="{{ path('app_car_index') }}" class="btn btn-primary">&larr; Retour</a>
  {% endif %}
</div>
{% endblock %}